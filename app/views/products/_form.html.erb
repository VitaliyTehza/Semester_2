<p>Select category of product</p>
<% @categories.each do |category| %>
<div>
    <%= check_box_tag 'category_ids[]', category.id %>
    <%= f.label category.name %>
</div>
<% end %>

  <div class="form-group">
   <%= f.label :name %><br />
   <%= f.text_field :name, autofocus: true %>    
  </div>
  
  <div class="form-group">
    <%= f.file_field :photos, multiple: true, id:'package-file-select' %>
  </div>
  
  <div class="form-group">
   <%= f.label :price %><br />
   <%= f.text_field :price %>    
  </div>
  
  <div class="form-group">
   <%= f.label :count %><br />
   <%= f.text_field :count %>    
  </div>
  
   <div class="form-group">
   <%= f.label :description %><br />
   <%= f.text_area :description, :class => "tinymce", :rows => 10, :cols => 30 %>
   <%= tinymce %>    
  </div>
  
  <div class="form-group text-center m-t-30">
    <%= f.submit "Save", class: "btn btn-info" %>
  </div>