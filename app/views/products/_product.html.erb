   <div class="col-sm-6 col-md-4 col-lg-3 mt-4">     
    <div class="card" style="width: 25rem;">
      <div class="card-img-top">      
      <% if product.photos == [] %>
          
        <% else %>
          <%= image_tag(product.photos.first.url, height: '200', width: '200') %>
        <% end %>
         <div class="card-block">
          <h4 class="card-title"><%= link_to product.name, product_path(product.id) %></h4>
          </div>
    </div>
   </div>
 
  </div>


<div>
  <h3><%=link_to product.name, product_path(product.id) %></h3>
  <small>
        <time><%= product.created_at.to_date.strftime("%d %B, %Y") %></time>
  </small>
</div>
