<section id="products">
    <div class="col-sm-6 col-md-8 col-lg-9 mt-4">  
    <h3 style="font-weight: 900;"><%= t("product") %> |<i class="link"> <%= link_to t("all_products"), products_path %></i></h3>

    <% @products.each do |product| %>
        <div class="col-sm-6 col-md-8 col-lg-4 mt-9">
        <%= render 'products/product', product:product %>
    </div>
    <%end%>
  </section>